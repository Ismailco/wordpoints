{
	"textdomain": { "wordpoints": true, "default": true },
	"basedir": "./src",
	"ignored-paths": [ "/library" ],
	"bootstrap": "dev-lib/l10n-validator/bootstrap.php",
	"cache": "./.wp-l10n-validator-cache.json",
	"ignores-cache": "./.wp-l10n-validator-ignores-cache.json",
	"ignores-tolerance": 100,
	"ignores-rules": {
		"all-lowercase": true
	},
    "ignored-functions": {
		"WordPoints_Module_Server_API_EDD_SL::get_module_info": true,
		"WordPoints_Points_Un_Installer::_1_9_0_combine_hooks": true,
		"WordPoints_Widget::get_field_name": true
	},
	"ignored-strings": [
		"<?php // Gold is silent.",
		"ALL",
		"ID",
		"IN",
		"OR"
	]
}
